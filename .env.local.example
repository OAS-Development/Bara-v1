# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# CRITICAL SECURITY CONFIGURATION - REQUIRED
# The app will not start without these settings

# The only user ID allowed to access this system
# Get this from Supabase dashboard after creating your account
OWNER_USER_ID=your-user-id-here

# Your email address (for security monitoring)
OWNER_EMAIL=your-email@example.com

# Deployment mode - MUST be "personal" for single-user system
DEPLOYMENT_MODE=personal

# Security settings - DO NOT CHANGE
ALLOW_PUBLIC_SIGNUP=false
REQUIRE_AUTH=true

# Optional: Security monitoring email notifications
SECURITY_ALERT_EMAIL=your-alert-email@example.com

# Optional: Session configuration
SESSION_TIMEOUT_MINUTES=30
SINGLE_SESSION_ONLY=true